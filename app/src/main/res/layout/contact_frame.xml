<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="3dp">

        <ImageView
            android:id="@+id/contact_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gambar_01" />

        <FrameLayout
            android:id="@+id/contact_layout"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/gradient_background">
            <ImageView
                android:visibility="gone"
                android:id="@+id/contact_delete"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_margin="12dp"
                android:layout_gravity="right"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:orientation="vertical"
                        android:padding="6dp">

                        <it.creative.contactphone.Font.RobotoLight
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Charm Level"
                            android:textColor="#fff" />

                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView

                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center|right"
                                android:src="@drawable/ic_favorite_black_24dp" />

                            <it.creative.contactphone.Font.RobotoThin
                                android:id="@+id/contact_beauty"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:padding="2dp"
                                android:text="100%"
                                android:textColor="#fff"
                                android:textSize="24dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <it.creative.contactphone.Font.RobotoThin
                            android:id="@+id/contact_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:text="Contact Name"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="26dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <it.creative.contactphone.Font.RobotoThin
                                android:id="@+id/contact_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:text="( sex )"
                                android:textColor="@color/cardview_light_background" />

                            <it.creative.contactphone.Font.RobotoThin
                                android:id="@+id/contact_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="12dp"
                                android:text="email"
                                android:textColor="@color/cardview_light_background" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="24dp"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="6dp"
                                android:src="@drawable/ic_call_black_24dp"
                                android:tint="#fff" />

                            <it.creative.contactphone.Font.RobotoThin
                                android:id="@+id/contact_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:text="Contact Name"
                                android:textColor="@color/cardview_light_background" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="6dp"
                                android:src="@drawable/ic_star_black_24dp"
                                android:tint="#fff" />

                            <it.creative.contactphone.Font.RobotoThin
                                android:id="@+id/contact_hobbies"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:text="Hobbies"
                                android:textColor="@color/cardview_light_background" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>